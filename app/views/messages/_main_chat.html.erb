<div class="main_header">
  <div class="main_header_logo">
    hogehuga
  </div>
  <div class="main_header_btn">
    <a class="chat_end" href="">チャットを終了する</a>
  </div>
</div>
<div class="main_box">
  <div class="main_box_contents">
    <div class="main_box_content">
      <div class="main_box_name">Tom</div>
      <div class="main_box_date">2020/3/31(Wed) 12:34:56</div>
    </div>
    <div class="main_box_messages">おはよう</div>
  </div>
</div>
<div class="main_footer">
  <%= form_with model: [@room, @message], class: 'main_footer_form', local: true do |f| %>
    <div class="footer_form_contents">
      <%= f.text_field :content, class: 'main_footer_text', placeholder: 'type a message' %>
      <label class="main_footer_image">
        <span class="image_file">画像<span>
        <%= f.file_field :image, class: 'image_file_commit' %>
      </label>
    </div>
    <%= f.submit '送信', class: 'main_footer_commit' %>
  <% end %>
</div>